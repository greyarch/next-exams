{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "eslint-config-next"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "ecmaVersion": 2017,
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "no-console": 0,
      "react/display-name": 0,
      "react/prop-types": [
        2,
        {
          "skipUndeclared": true
        }
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        2,
        "never"
      ]
    }
}
